$gutter = 20px

$margin-micro = ($gutter / 3)
$margin-tiny = ($gutter / 2)
$margin-small = ($gutter)
$margin-basic = ($gutter * 2)
$margin-mid = ($gutter * 4)
$margin-large = ($gutter * 6)

$font-size-basic = 16px
$font-size-small = $font-size-basic * .5
$font-size-mid = $font-size-basic * 1.5
$font-size-large = $font-size-basic * 3

grid-maker(100%, $gutter, s)

space-maker($margin-micro, $margin-tiny, $margin-small, $margin-basic, $margin-mid, $margin-large)

font-sizes($font-size-basic, false, $font-size-large, $font-size-mid, $font-size-small)

#dust
  position: fixed
  top: 0
  right: 0
  z-index: -100
  pointer-events: none

.honeypot
  text-decoration: underline
  cursor: pointer
  user-select: none

.honeypot-image
  position: fixed
  left: 50%
  top: 50%
  transform: translate(-50%, -50%)
  max-height: 0
  max-width: 0
  height: auto
  width: auto
  z-index: 300
  opacity: 0
  pointer-events: none

#honeypot-loader
  display: none

// ******************************************************

// HEADER

#main-nav
  position: fixed
  top: 0
  left: 0
  width: 100vw
  z-index: 200

#site-title
  z-index: 100
  line-height: 1

// ******************************************************

// TOP

section#top
  margin-top: -($margin-small * 1.5)
